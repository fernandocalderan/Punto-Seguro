{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "*.html",
          "*.png",
          "*.jpg",
          "*.jpeg",
          "*.webp",
          "js/**",
          "css/**",
          "styles/**",
          "admin/**",
          "blog/**",
          "Imagenes/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/api/index.js" }
  ]
}
